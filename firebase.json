{
  "rulesFile": "database.rules.json",
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "hosting": {
      "port": 8000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    },
    "database": {
      "port": 9000
    }
  }
}
